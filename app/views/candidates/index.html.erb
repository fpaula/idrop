<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Candidates</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Category</th>
        <th>Image url</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @candidates.each do |candidate| %>
        <tr>
          <td><%= candidate.name %></td>
          <td><%= candidate.status %></td>
          <td><%= candidate.category.try(:name) %></
          <td><%= image_tag(candidate.image_url, width: '150px', height: '200px') %></td>
          <td><%= link_to 'Show', candidate %></td>
          <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
          <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Candidate', new_candidate_path %>
</div>