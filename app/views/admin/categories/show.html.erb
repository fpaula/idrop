<div class="container admin-container">
  <%= render partial: 'notice_growl' %>

  <h1><%= @category.name %></h1>

  <p>
    <strong>Name:</strong>
    <%= @category.name %>
  </p>

  <p>
    <strong>Parent:</strong>
    <%= @category.parent_id %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= @category.status %>
  </p>

  <%= link_to edit_admin_category_path(@category) do %>
    <%= button_tag type: 'button', class: 'btn btn-default btn-white' do %>
      <i class='fa fa-edit'></i> Edit
    <% end %>
  <% end %>

  <%= link_to admin_categories_path do %>
    <%= button_tag type: 'button', class: 'btn btn-default btn-white' do %>
      <i class='fa fa-mail-reply'></i> Go back
    <% end %>
  <% end %>
</div>