<div class="container admin-container">
  <%= render partial: 'notice_growl' %>

  <h1>Listing Categories</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Active?</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td style="padding:5px;"><%= nested_category(category.id) %></td>
          <td style="padding:5px;"><%= category.status %></td>
          <td class='icon'>
            <%= link_to admin_category_path(category) do %>
              <i class="fa fa-plus"></i>
            <% end %>
          </td>
          <td class='icon'>
            <%= link_to edit_admin_category_path(category) do %>
              <i class="fa fa-edit"></i>
            <% end %>
          </td>
          <td class='icon'>
            <%= link_to admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="fa fa-trash-o"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br />
  <p>
    <%= link_to new_admin_category_path, class: 'btn btn-success' do %>
      <i class='fa fa-plus'></i> New Category
    <% end %>
  </p>
</div>