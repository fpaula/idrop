<%= render partial: 'menu' %>

<div class="container admin-container">
  <%= render partial: 'shared/notice_growl' %>

  <p>
    <strong>Name:</strong>
    <%= @candidate.name %>
  </p>

  <% if @candidate.image_url %>
    <p>
      <strong>Original Image:</strong>
      <img src="<%= @candidate.image_url %>"/>
    </p>
  <% end %>

  <p>
    <strong>Modified Image:</strong>
    <%= image_tag attachment_url(@candidate, :modified_image, format: "jpg") %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= @candidate.image_url %>
  </p>

  <p>
    <strong>Original image page:</strong>
    <%= @candidate.image_original_url %>
  </p>

  <p>
    <strong>Original image title:</strong>
    <%= @candidate.image_original_title %>
  </p>

  <p>
    <strong>Image Author:</strong>
    <%= @candidate.image_author_name %>
  </p>

  <p>
    <strong>Image Author Page:</strong>
    <%= @candidate.image_author_url %>
  </p>

  <p>
    <strong>License from Creative Commons (CC):</strong>
    <%= @candidate.image_license %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @candidate.category.try(:name) %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= @candidate.status %>
  </p>

  <%= link_to edit_admin_candidate_path(@candidate) do %>
    <%= button_tag type: 'button', class: 'btn btn-default btn-white' do %>
      <i class='fa fa-edit'></i> Edit
    <% end %>
  <% end %>

  <%= link_to admin_candidates_path do %>
    <%= button_tag type: 'button', class: 'btn btn-default btn-white' do %>
      <i class='fa fa-mail-reply'></i> Go back
    <% end %>
  <% end %>
</div>