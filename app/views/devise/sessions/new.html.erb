<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :email, 'EndereÃ§o de e-mail', class: 'mdl-textfield__label' %>
    <%= f.email_field :email, autofocus: true, class: 'mdl-textfield__input' %>
  </div>
  <br />
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :password, 'Senha', class: 'mdl-textfield__label' %>
    <%= f.password_field :password, autocomplete: 'off', class: 'mdl-textfield__input' %>

  </div>
  <br />

  <% if devise_mapping.rememberable? -%>
    <label class='mdl-switch mdl-js-switch mdl-js-ripple-effect' for='switch'>
      <%= f.check_box :remember_me, class: 'mdl-switch__input', id: 'switch' %>
      <span class="mdl-switch__label">Lembrar senha</span>
    </label>
  <% end -%>

  <br />
  <br />
  <%= f.submit 'Entrar', class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored' %>
<% end %>

<br />
