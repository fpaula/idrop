<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
  <h2 class="form-signin-heading">Entrar</h2>

  <%= f.label :email, 'E-mail', class: 'sr-only' %>
  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'EndereÃ§o de e-mail' %>

  <%= f.label :password, 'Senha', class: 'sr-only' %>
  <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Senha'  %>

  <% if devise_mapping.rememberable? -%>
    <div class='checkbox'>
      <%= label_tag do %>
        <%= f.check_box :remember_me %> Lembrar senha
      <% end %>
    </div>
  <% end -%>

  <%= f.submit 'Entrar', class: 'btn btn-primary' %>
<% end %>

