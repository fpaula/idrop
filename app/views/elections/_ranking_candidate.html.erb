<% position ||= 1 %>
<% candidate ||= nil %>

<% if candidate.present? %>
  <div class='row candidate<%= ' top-one' if position == 1 %>'>
    <div class='col-md-1'>
      <div class='list bold position'><%= position %>ยบ</div>
    </div>
    <div class='col-md-2'>
      <div class='img' style='background-image: url("<%= candidate.image_url %>");'></div>
    </div>
    <div class='col-md-6'>
      <div class='info'>
        <span class='bold'><%= candidate.name %></span>
        <span class='light-gray'>
          <%= number_with_delimiter(candidate.total_votes, delimiter: '.') %>
          <%= candidate.total_votes == 1 ? 'voto': ' votos' %>
        </span>
      </div>
    </div>
  </div>
<% end %>